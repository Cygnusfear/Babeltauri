{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Babelfish",
  "version": "1.0.0",
  "identifier": "com.babelfish.app",
  "build": {
    "devUrl": "http://localhost:5173",
    "frontendDist": "./src-ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Babelfish",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://openrouter.ai",
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for all windows",
          "windows": ["*"],
          "permissions": [
            "core:window:default",
            "core:window:allow-start-dragging"
          ]
        }
      ]
    }
  },
  "bundle": {
    "icon": [
      "icons/icon.png"
    ]
  }
}
